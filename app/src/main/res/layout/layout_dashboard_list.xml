<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0px"
    android:clipToPadding="false"
    >

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"

            android:layout_marginRight="5px"


            android:background="#fafafa"
            android:orientation="vertical"
            android:padding="10px"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="0px"
                android:orientation="horizontal"
                android:visibility="visible">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/user_icon"
                    android:layout_width="85dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mens"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="3dp"
                    />


                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="আজম খান "
                            android:textColor="@color/colorPrimary"
                            android:textSize="19sp" />

                    </LinearLayout>

                    <TextView

                        android:layout_marginTop="-2dp"
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"

                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="+8801677182084"
                        android:textColor="#6A6B6B"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_marginTop="-2dp"
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="+8801677182084"
                        android:textColor="#6A6B6B"
                        android:textSize="15sp" />


                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_marginTop="-2dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/tv_remaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="আর মাত্র 5 মিনিট"
                            android:textColor="#856404"
                            android:textStyle="bold"
                            android:textSize="17sp" />
                        <TextView

                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:paddingTop="6dp"
                            android:background="@drawable/text_view_circular"
                            android:id="@+id/tv_serial"

                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="25dp"
                            android:text="12"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_more"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </RelativeLayout>



            <View
                android:layout_marginTop="8dp"
                android:background="#b8b8b8"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

        </LinearLayout>


</RelativeLayout>